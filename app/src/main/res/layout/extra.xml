<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/todoTask_cardview_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="16dp"
    app:cardCornerRadius="12dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/todoTask_cardview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="24dp"
        android:paddingBottom="24dp">


        <LinearLayout
            android:id="@+id/todoTask_cardview_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_todoTask_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/bubble_gumsans_regular"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="@string/todo_task"
                android:textColor="#6750A4"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Name" />

            <ImageButton
                android:id="@+id/btn_delete"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:background="@null"
                android:contentDescription="@string/delete"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                app:srcCompat="@drawable/baseline_delete_24" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/todoTask_cardview_linear_layout_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/todoTask_cardview_linear_layout">

            <TextView
                android:id="@+id/tv_todoTask_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/bubble_gumsans_regular"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="@string/todo_task"
                android:textColor="@color/gray"
                android:textSize="16sp"
                tools:text="Details" />


            <TextView
                android:id="@+id/tv_todoTask_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:fontFamily="@font/bubble_gumsans_regular"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="@string/todo_task"
                android:textAlignment="center"
                android:textColor="@color/red"
                tools:text="Time" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>