<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/todoTask_cardview_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="16dp"
    app:cardCornerRadius="12dp">

    <!--    <TextView-->
    <!--        android:id="@+id/tv_todoTask_id"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:text="@string/todo_task"-->
    <!--        android:textSize="32sp"-->
    <!--        android:textAlignment="center"-->
    <!--        app:layout_constraintEnd_toEndOf="parent"-->
    <!--        app:layout_constraintStart_toStartOf="parent"-->
    <!--        app:layout_constraintTop_toTopOf="parent" />-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/todoTask_cardview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/todoTask_cardview_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_todoTask_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/todo_task"
                android:textSize="16sp"
                android:padding="8dp"
                tools:text="Name"/>

            <ImageView
                android:id="@+id/cardView_delete_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:contentDescription="@string/delete"
                android:padding="8dp"
                app:srcCompat="@drawable/baseline_delete_24"/>

        </LinearLayout>


        <TextView
            android:id="@+id/tv_todoTask_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/todo_task"
            android:textSize="16sp"
            android:padding="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/todoTask_cardview_linear_layout"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Details"/>
        <TextView
            android:id="@+id/tv_todoTask_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/todo_task"
            android:textSize="16sp"
            android:padding="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_todoTask_details"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Time"/>



    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>