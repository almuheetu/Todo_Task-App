<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/todoTask">

    <fragment
        android:id="@+id/todoTask"
        android:name="com.example.todotask.TodoTaskFragment"
        android:label="fragment_todo_task"
        tools:layout="@layout/fragment_todo_task">

        <action
            android:id="@+id/action_todoTask_to_addTask2"
            app:destination="@id/addTask2" />
        <action
            android:id="@+id/action_todoTask_to_updateTask"
            app:destination="@id/updateTask" />
    </fragment>
    <fragment
        android:id="@+id/addTask2"
        android:name="com.example.todotask.AddTaskFragment"
        android:label="fragment_add_task"
        tools:layout="@layout/fragment_add_task" />
    <fragment
        android:id="@+id/updateTask"
        android:name="com.example.todotask.UpdateTaskFragment"
        android:label="fragment_update_task"
        tools:layout="@layout/fragment_update_task" >
        <argument
            android:name="data"
            app:argType="com.example.todotask.Todo" />
    </fragment>

</navigation>